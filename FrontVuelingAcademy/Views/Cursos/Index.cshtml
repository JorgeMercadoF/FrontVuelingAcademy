@model IEnumerable<FrontVuelingAcademy.Models.Curso>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comentario_HTML)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen_Miniatura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen_Grande)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCategoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso1)
            </td>
            <td>
                @Html.Raw(item.Comentario_HTML)
            </td>
            <td>
                @if (item.Imagen_Miniatura != null)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Imagen_Miniatura)" width="50" height="50" />
                }
                else
                {
                    <img src="https://via.placeholder.com/50x50" />
                }
            </td>
            <td>
                @if (item.Imagen_Grande != null)
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Imagen_Grande)" width="100" height="100" />
                }
                else
                {
                    <img src="https://via.placeholder.com/100x100" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoriaNavigation.Sub_Categoria)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
