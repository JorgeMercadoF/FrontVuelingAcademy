@model FrontVuelingAcademy.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Categoria1)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Categoria1)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ComentarioHtml)
        </dt>
        <dd>
            @Html.Raw(Model.ComentarioHtml)
        </dd>
        <dt>@Html.DisplayNameFor(model => model.Imagen_Grande)</dt>
        <dd>
            @if (Model.Imagen_Grande != null)
            {
                <img src="data:image;base64,@System.Convert.ToBase64String(Model.Imagen_Grande)" width="100" height="100" />
            }
            else
            {
                <img src="https://via.placeholder.com/100x100" />
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt></dt>
        <dd>
            @{
                await Html.RenderPartialAsync("_SubCategorias");
            }
        </dd>
    </dl>

</div>
<div>
